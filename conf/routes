# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     				/                           controllers.Application.index
GET     				/line 		                controllers.Application.lineChart
GET     				/columnAndBarChart 		    controllers.Application.columnAndBarChart
GET     				/areaAndPieChart 		    controllers.Application.areaAndPieChart
GET     				/areaAndPieChart 		    controllers.Application.areaAndPieChart
GET     				/bubbleChart		 		controllers.Application.bubbleChart
GET						/assets/test.txt          		 controllers.Assets.at(path="/public", file="/test.txt")
GET						/assets/test_combo.txt          		 controllers.Assets.at(path="/public", file="/test_combo.txt")

# text files for the highcharts
GET						/assets/txt_files/1.csv          		 controllers.Assets.at(path="/public", file="/txt_files/1.csv")
GET						/assets/txt_files/2.csv          		 controllers.Assets.at(path="/public", file="/txt_files/2.csv")
GET						/assets/txt_files/3.csv          		 controllers.Assets.at(path="/public", file="/txt_files/3.csv")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
